{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 500,
  "title": {"text": "Total Number of Medals by Country", "frame": "group"},
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/js/globe.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/js/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/js/globe.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    {
      "name": "source_3",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/dataset/medal_countries_map.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "datum.Total >= CountAbove"},
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["Longitude", "Latitude"],
          "as": ["layer_3_x", "layer_3_y"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Total\"]) && isFinite(+datum[\"Total\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "translate": {"signal": "[width / 2, height / 2]"},
      "type": "equalEarth",
      "scale": {"signal": "zoom_level"},
      "center": {"signal": "center_to"}
    }
  ],
  "signals": [
    {
      "name": "CountAbove",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 113,
        "step": 1,
        "name": "Min. Medals: "
      }
    },
    {
      "name": "zoom_level",
      "value": 120,
      "bind": {
        "input": "range",
        "min": 120,
        "max": 800,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [20, 50],
          [100, 30],
          [20, 5],
          [-90, 40],
          [-60, -10],
          [150, -30]
        ],
        "labels": [
          "World",
          "Europe",
          "Asia",
          "Africa",
          "North America",
          "South America",
          "Oceania (Australia/New Zealand)"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "#e5dec0"},
          "stroke": {"value": "#bbbaba"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "fill": {"value": "#cbe5fc"},
          "stroke": {"value": "darkgrey"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_2_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "fill": {"value": null},
          "stroke": {"value": "#c4cfd9"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_3_marks",
      "type": "symbol",
      "clip": true,
      "style": ["circle"],
      "from": {"data": "source_3"},
      "encode": {
        "update": {
          "opacity": {"value": 0.6},
          "fill": {"value": "#005344"},
          "tooltip": {
            "signal": "{\"Country/Team\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Total Medals\": format(datum[\"Total\"], \"\"), \"Gold Medals\": format(datum[\"Gold\"], \"\"), \"Silver Medals\": format(datum[\"Silver\"], \"\"), \"Bronze Medals\": format(datum[\"Bronze\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"Longitude: \" + (format(datum[\"Longitude\"], \"\")) + \"; Latitude: \" + (format(datum[\"Latitude\"], \"\")) + \"; Number of Medals Obtained: \" + (format(datum[\"Total\"], \"\")) + \"; Country/Team: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Total Medals: \" + (format(datum[\"Total\"], \"\")) + \"; Gold Medals: \" + (format(datum[\"Gold\"], \"\")) + \"; Silver Medals: \" + (format(datum[\"Silver\"], \"\")) + \"; Bronze Medals: \" + (format(datum[\"Bronze\"], \"\"))"
          },
          "x": {"field": "layer_3_x"},
          "y": {"field": "layer_3_y"},
          "size": {"scale": "size", "field": "Total"},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "threshold",
      "domain": [5, 10, 20, 50, 80, 100],
      "range": [7, 15, 50, 100, 200, 380, 580]
    }
  ],
  "legends": [
    {
      "title": "Number of Medals Obtained",
      "size": "size",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "#005344"},
            "opacity": {"value": 0.6},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}