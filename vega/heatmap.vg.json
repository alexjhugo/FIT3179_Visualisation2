{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 450,
  "height": 500,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/dataset/top10CountryMedalsLONG.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "formula", "expr": "0", "as": "x_MedalType_sort_index"},
        {"type": "formula", "expr": "0", "as": "y_Country_sort_index"}
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["MedalType", "Country"],
          "ops": ["sum"],
          "fields": ["Count"],
          "as": ["sum_Count"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"sum_Count\"]) && isFinite(+datum[\"sum_Count\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rect",
      "style": ["rect"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "sum_Count"},
          "description": {
            "signal": "\"Medal Type: \" + (isValid(datum[\"MedalType\"]) ? datum[\"MedalType\"] : \"\"+datum[\"MedalType\"]) + \"; Country/Team: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Number of Medals: \" + (format(datum[\"sum_Count\"], \"\"))"
          },
          "x": {"scale": "x", "field": "MedalType"},
          "width": {"scale": "x", "band": 1},
          "y": {"scale": "y", "field": "Country"},
          "height": {"scale": "y", "band": 1}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "MedalType",
        "sort": {"op": "min", "field": "x_MedalType_sort_index"}
      },
      "range": [0, {"signal": "width"}],
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Country",
        "sort": {"op": "min", "field": "y_Country_sort_index"}
      },
      "range": [0, {"signal": "height"}],
      "paddingInner": 0,
      "paddingOuter": 0
    },
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "data_0", "field": "sum_Count"},
      "range": "heatmap",
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Medal Type",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Country/Team",
      "zindex": 1
    }
  ],
  "legends": [
    {
      "title": "Number of Medals",
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"}
    }
  ],
  "config": {
    "axis": {"grid": true, "tickBand": "extent", "gridColor": "lightgrey"}
  }
}