{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 1100,
  "height": 450,
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/topojson/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/topojson/globe.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    {
      "name": "source_3",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/dataset/choropleth.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/topojson/globe2.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_2",
      "transform": [
        {
          "type": "lookup",
          "from": "source_3",
          "key": "Country",
          "fields": ["properties.NAME"],
          "values": ["NumAthletesPerGoldMedal"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"NumAthletesPerGoldMedal\"]) && isFinite(+datum[\"NumAthletesPerGoldMedal\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "translate": {"signal": "[width / 2, height / 2]"},
      "type": "equalEarth",
      "scale": {"signal": "zoom_level"},
      "center": {"signal": "center_to"}
    }
  ],
  "signals": [
    {
      "name": "zoom_level",
      "value": 180,
      "bind": {
        "input": "range",
        "min": 180,
        "max": 1000,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [20, 50],
          [100, 30],
          [120, 5],
          [20, 5],
          [-90, 40],
          [-60, -10],
          [150, -30]
        ],
        "labels": [
          "World",
          "Europe",
          "Asia",
          "Southeast Asia",
          "Africa",
          "North America",
          "South America",
          "Oceania (Australia/New Zealand)"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "#cbe5fc"},
          "stroke": {"value": ""},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "fill": {"value": null},
          "stroke": {"value": "#c4cfd9"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_2_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "fill": {"value": "#cacaca"},
          "stroke": {"value": ""},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_3_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "NumAthletesPerGoldMedal"},
          "tooltip": {
            "signal": "{\"Country/Team\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"Athletes per Gold Medal\": format(datum[\"NumAthletesPerGoldMedal\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"NumAthletesPerGoldMedal: \" + (format(datum[\"NumAthletesPerGoldMedal\"], \"\")) + \"; Country/Team: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"]) + \"; Athletes per Gold Medal: \" + (format(datum[\"NumAthletesPerGoldMedal\"], \"\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_4_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "fill": {"value": ""},
          "stroke": {"value": "white"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "data_0", "field": "NumAthletesPerGoldMedal"},
      "range": {"scheme": "teals"},
      "reverse": true,
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "orient": "bottom-right",
      "title": "Athletes per Gold Medal",
      "fill": "color",
      "direction": "horizontal",
      "gradientLength": 100
    }
  ],
  "config": {}
}