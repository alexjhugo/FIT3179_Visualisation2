{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 500,
  "height": 470,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/dataset/EntriesGenderPopularLONG.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {"type": "formula", "expr": "0", "as": "x_Discipline_sort_index"}
      ]
    },
    {
      "name": "data_1",
      "source": "data_0",
      "transform": [
        {
          "type": "stack",
          "groupby": ["Discipline", "Gender"],
          "field": "Count",
          "sort": {"field": [], "order": []},
          "as": ["Count_start", "Count_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Count\"]) && isFinite(+datum[\"Count\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Gender"},
          "tooltip": {
            "signal": "{\"Discipline\": isValid(datum[\"Discipline\"]) ? datum[\"Discipline\"] : \"\"+datum[\"Discipline\"], \"Number of Athletes\": format(datum[\"Count\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Discipline: \" + (isValid(datum[\"Discipline\"]) ? datum[\"Discipline\"] : \"\"+datum[\"Discipline\"]) + \"; Number of Athletes: \" + (format(datum[\"Count\"], \"\")) + \"; Gender: \" + (isValid(datum[\"Gender\"]) ? datum[\"Gender\"] : \"\"+datum[\"Gender\"])"
          },
          "x": {
            "scale": "x",
            "field": "Discipline",
            "offset": {"scale": "xOffset", "field": "Gender"}
          },
          "width": {"scale": "xOffset", "band": 1},
          "y": {"scale": "y", "field": "Count_end"},
          "y2": {"scale": "y", "field": "Count_start"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "dx": {"value": 185},
          "dy": {"value": 85},
          "fontSize": {"value": 11.5},
          "fontStyle": {"value": "italic"},
          "fill": {"value": "black"},
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {
        "data": "data_0",
        "field": "Discipline",
        "sort": {"op": "min", "field": "x_Discipline_sort_index"}
      },
      "range": [0, {"signal": "width"}],
      "paddingInner": 0.2,
      "paddingOuter": 0.2
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "data_1", "fields": ["Count_start", "Count_end"]},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "xOffset",
      "type": "band",
      "domain": {"data": "data_1", "field": "Gender", "sort": true},
      "range": [0, {"signal": "bandwidth('x')"}]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "data_1", "field": "Gender", "sort": true},
      "range": ["#1864aa", "#369897"]
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Discipline",
      "labelAlign": "right",
      "labelAngle": 315,
      "labelBaseline": "middle",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Number of Athletes",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {
      "orient": "top-right",
      "fill": "color",
      "symbolType": "square",
      "title": "Gender"
    }
  ],
  "config": {}
}