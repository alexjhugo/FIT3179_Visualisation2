{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "700",
  "height": "450",
  "title": "Country Medals World Map",
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "Total_Medals_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 113,
        "step": 1,
        "name": "Minimum Number of Medals: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Total > Medals_GEq"}
  ],
  "selection": {
    "medalTypeSelection": {
      "type": "single",
      "fields": ["Total", "Gold", "Silver", "Bronze"],
      "bind": "legend"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/js/globe.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#e5dec0", "stroke": "#bbbaba"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#cbe5fc", "stroke": "darkgrey"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/js/globe.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#c4cfd9"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/alexjhugo/FIT3179_Visualisation2/main/dataset/medal_countries_map.csv"
      },
      "transform": [{"filter": "datum.Total >= Total_Medals_Above"}],
      "mark": {
        "type": "circle",
        "tooltip": {"content": "data"},
        "fill": "black",
        "opacity": 0.6
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Total",
          "type": "quantitative",
          "title": "Number of Medals Obtained",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 20, 50, 80, 100],
            "range": [7, 15, 50, 100, 200, 380, 580]
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country/Team"},
          {"field": "Rank", "type": "quantitative", "title": "Rank"},
          {"field": "Total", "type": "quantitative", "title": "Total Medals"},
          {"field": "Gold", "type": "quantitative", "title": "Gold Medals"},
          {"field": "Silver", "type": "quantitative", "title": "Silver Medals"},
          {"field": "Bronze", "type": "quantitative", "title": "Bronze Medals"}
        ]
      }
    }
  ]
}